#!/bin/bash
# Author: Theodoros Pavlidis
# Calculates Sofia's age.

d=`echo 18`
m=`echo 02`
y=`echo 2018`

yy=`date "+%Y"`
mm=`date "+%m"`
dd=`date "+%d"`

if [ $y -le $yy ]
then
yyy=`expr $yy - $y`
mmm=`expr $mm - $m`
ddd=`expr $dd - $d`

if [ $m -gt $mm ]
then
yyy=`expr $yyy - 1`
mmm=`expr $mmm + 12`
fi

if [ $d -gt $dd ]
then
ddd=`expr $d - $dd`
ddd=`expr 31 - $ddd`
else
ddd=`expr $dd - $d`
fi

fi

echo -e "\e[92mΗ Σοφία είναι $yyy χρονών, $mmm μηνών και $ddd ημερών.\e[0m"
