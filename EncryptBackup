#!/bin/bash
# Author: Theodoros Pavlidis
# Backups Encrypted USB Stick to "Data" hard Disk.

rm -rf /mnt/Data/Work/Βενζινάδικο/*
cd /run/media/pavlidis/82d8029f-2e75-4f9d-9ce2-313ae0d70a87/SmartManager
7z a -p -mx=1 -mhe -t7z -r SmartManager.7z Wayland/ Xorg/ Zsh/
mv SmartManager.7z /mnt/Data/Work/Βενζινάδικο/
echo -e "\e[32mBackup is complete."
